{{>nav}}
<div class="container">
    <!-- Form Area -->
    <div class="contact-form-area mt-5">
        <h2 style="color:rgb(119, 177, 34)" class="mb-3">Sign up</h2>
        {{>messages}}
        <form action="/signup" method="post">
            <div class="row">
                <div class="col-lg-8">
                    <input type="text" class="form-control" value="{{username}}" name="username" placeholder="Your Username" required>
                </div>
                <div class="col-lg-8">
                    <input type="email" class="form-control" value="{{email}}" name="email" placeholder="Your Email" required>
                </div>
                <div class="col-lg-8">
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
                <div class="col-lg-8">
                    <input type="password" class="form-control" name="confirmpassword" placeholder="Confirm Password"
                        required>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn famie-btn">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>